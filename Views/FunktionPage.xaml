<Page
    x:Class="App3.Views.FunktionPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:App3.Properties"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Style="{StaticResource PageTitleStyle}"
            Margin="{StaticResource MediumLeftMargin}"></TextBlock>
        <Grid
            Grid.Row="1"
            Margin="{StaticResource MediumLeftRightMargin}"
            Background="{DynamicResource MahApps.Brushes.Gray10}">
            <Button x:Name="btnGetIconList"
                    Content="Get Icon List"
                    HorizontalAlignment="Left"
                    Height="95" Margin="41,32,0,0"
                    VerticalAlignment="Top"
                    Width="180"
                    Click="btnGetIconList_Click"/>
            <Button x:Name="btnMoniScann"
                    Content="Monitor Scan"
                    HorizontalAlignment="Left"
                    Height="75"
                    Margin="276,42,0,0"
                    VerticalAlignment="Top"
                    Width="115"
                    Click="btnMoniScann_Click"/>
            <Button x:Name="btnIniziStart"
                    Content="Initialisierung " 
                    HorizontalAlignment="Left" 
                    Height="160" Margin="541,22,0,0" 
                    VerticalAlignment="Top" 
                    Width="65" 
                    Click="btnIniziStart_Click"/>
            <Button x:Name="btnDeskOkDownload"
                    Content="DesktopOK Download" 
                    HorizontalAlignment="Left" 
                    Height="100" Margin="86,177,0,0" 
                    VerticalAlignment="Top" 
                    Width="135"
                    Click="btnDeskOkDownload_Click" />
            <Button x:Name="btnDOSavePos"
                    Content="Save Icon Pos" 
                    HorizontalAlignment="Left" 
                    Height="76" 
                    Margin="291,201,0,0" 
                    VerticalAlignment="Top" 
                    Width="100"
                    Click="btnDOSavePos_Click"/>
            <Button x:Name="btnDOReadData"
                    Content="Datei Lesen" 
                    HorizontalAlignment="Left" 
                    Height="80" 
                    Margin="481,252,0,0" 
                    VerticalAlignment="Top" 
                    Width="125"
                    Click="btnDOReadData_Click"/>
            <Button x:Name="btnDOBearbeiten"
                    Content="Daten Bearbeiten" 
                    HorizontalAlignment="Left" 
                    Height="55" Margin="206,307,0,0" 
                    VerticalAlignment="Top" 
                    Width="185"
                    Click="btnDOBearbeiten_Click"/>
            <!--
            The Mahapps Gray10 color represents where you should place your content.
            Place your content here.
            -->
        </Grid>
    </Grid>
</Page>
