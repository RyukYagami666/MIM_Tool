<Window x:Class="MIM_Tool.Views.MonitorSelectionWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           Title="Monitor auswählen" Height="200" Width="300">
    <Grid>
        <ComboBox x:Name="MonitorComboBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <ComboBoxItem Content="Monitor 1" />
            <ComboBoxItem Content="Monitor 2" />
            <ComboBoxItem Content="Monitor 3" />
            <ComboBoxItem Content="Monitor 4" />
        </ComboBox>
        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Width="100" Click="OkButton_Click"/>
    </Grid>
</Window>
   